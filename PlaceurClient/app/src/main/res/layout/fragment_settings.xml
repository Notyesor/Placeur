<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artamonov.placeurclient.activity.fragment.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_height="100sp"
                app:srcCompat="@drawable/profile"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:layout_width="100sp"
                android:padding="10sp"/>

            <TextView
                android:text="Nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/loginView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="30sp"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView" />

            <TextView
                android:text="City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:id="@+id/cityView"
                android:layout_below="@+id/loginView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="24sp" />
        </RelativeLayout>

        <TextView
            android:text="similarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/similarityView"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helpButton"
            android:text="Справочная информация" />

        <Button
            android:text="Выбрать город"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityButton" />

        <Button
            android:text="Выбрать меру схожести"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/similarityButton" />

        <Button
            android:text="Сменить пароль"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/changePasswordButton" />

        <Button
            android:text="Выйти из системы"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logoutButton" />

    </LinearLayout>
</FrameLayout>
