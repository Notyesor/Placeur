<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.artamonov.placeur.web.place.PlaceEdit"
        datasource="placeDs"
        focusComponent="fieldGroup"
        messagesPack="com.artamonov.placeur.web.place"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <dsContext>
        <datasource id="placeDs"
                    class="com.artamonov.placeur.entity.Place"
                    view="place-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <hbox expand="mapBox"
              height="100%"
              width="100%">
            <vbox id="actionBox"
                  height="100%"
                  margin="true"
                  spacing="true"
                  width="AUTO">
                <fieldGroup id="fieldGroup"
                            datasource="placeDs">
                    <column width="250px">
                        <field id="title"/>
                        <field id="description"/>
                        <field id="address"/>
                        <field id="city"/>
                        <field id="picture"/>
                        <field id="latitude"/>
                        <field id="longitude"/>
                    </column>
                </fieldGroup>
                <frame id="windowActions"
                       screen="editWindowActions"/>
            </vbox>
            <vbox id="mapBox"
                  expand="map"
                  height="100%"
                  margin="true"
                  spacing="true">
                <chart:mapViewer id="map"
                                 width="100%"/>
                <checkBox id="markerLock"
                          caption="msg://lockMarker"/>
            </vbox>
        </hbox>
    </layout>
</window>
