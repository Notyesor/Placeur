<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.artamonov.placeur.web.picture.PictureBrowse"
        focusComponent="picturesTable"
        lookupComponent="picturesTable"
        messagesPack="com.artamonov.placeur.web.picture">
    <dsContext>
        <collectionDatasource id="picturesDs"
                              class="com.artamonov.placeur.entity.Picture"
                              view="_local">
            <query>
                <![CDATA[select e from placeur$Picture e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="picturesTable"
            spacing="true">
        <filter id="filter"
                applyTo="picturesTable"
                datasource="picturesDs">
            <properties include=".*"/>
        </filter>
        <table id="picturesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="path"/>
            </columns>
            <rows datasource="picturesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="picturesTable.create"/>
                <button id="editBtn"
                        action="picturesTable.edit"/>
                <button id="removeBtn"
                        action="picturesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
