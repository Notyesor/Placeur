<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.artamonov.placeur.web.picture.PictureEdit"
        datasource="pictureDs"
        focusComponent="fieldGroup"
        messagesPack="com.artamonov.placeur.web.picture">
    <dsContext>
        <datasource id="pictureDs"
                    class="com.artamonov.placeur.entity.Picture"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="pictureDs">
            <column width="250px">
                <field id="path"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
